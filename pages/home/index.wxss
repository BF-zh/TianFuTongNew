/* pages/home/index.wxss */
.bg{
  width: 100%;
  height: 550rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.dot{
  --size:1.5em;
  position: relative;
}
.dot::after,.dot::before{
  position: absolute;
  content: '';
  top: 0;
  border-radius: var(--size);
  width: var(--size);
  height: var(--size);
  background: var(--primary-color);
}
.dot::after{
  left: 0;
  transform: translate(-50%,-50%);
}
.dot::before{
  right: 0;
  transform: translate(50%,-50%);
}